<?xml version="1.0" ?>
<statechart>
  <semantics input_event_lifeline="whole"/>

  <datamodel>
    c = 0;
  </datamodel>

  <root initial="D">
    <state id="D">
      <transition port="in" event="dial(d:int)" cond="c &lt; 10" target=".">
        <code> c += 1; </code>
        <raise port="out" event="out">
          <!-- <parameter expr="d"/> -->
        </raise>
      </transition>
    </state>
  </root>
</statechart>