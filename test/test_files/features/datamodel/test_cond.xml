<?xml version="1.0" ?>
<test>
  <statechart>
    <semantics/>
    <datamodel>
      <var id="x" expr="42"/>
      <!-- <var id="y" expr="x"/>this is allowed, value of x copied to y -->
    </datamodel>
    <root initial="start">
      <state id="start">
        <transition event="e" port="in" target="/done" cond="x == 42">
          <raise event="done" port="out"/>
        </transition>
      </state>
      <state id="done"/>
    </root>
  </statechart>
  <input>
    <event name="e" port="in" time="0 d"/>
  </input>
  <output>
    <big_step>
      <event name="done" port="out"/>
    </big_step>
  </output>
</test>