<?xml version="1.0" ?>
<test>
  <statechart>
    <datamodel><![CDATA[

      ok = False;

      outer = func(i:int) {
        inner = func(j:int) {
          if (i > j) {
            ok = True;
          };
        };
        inner(i-1);
      };

      outer(5);

    ]]></datamodel>

    <root initial="ready">
      <state id="ready">
        <transition port="in" event="start" target="../final"
          cond="ok">
          <raise port="out" event="ok"/>
        </transition>
      </state>

      <state id="final"/>
    </root>
  </statechart>

  <input>
    <event port="in" name="start" time="0 d"/>
  </input>

  <output>
    <big_step>
      <event port="out" name="ok"/>
    </big_step>
  </output>
</test>