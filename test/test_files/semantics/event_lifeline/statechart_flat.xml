<?xml version="1.0" ?>
<statechart>

  <inport name="in">
    <event name="e"/>
  </inport>

  <outport name="out">
    <event name="in_b"/>
    <event name="in_c"/>
  </outport>

  <root initial="a">
    <state id="a">
      <transition event="e" target="/b">
        <raise event="f"/>
      </transition>
    </state>
    <state id="b">
      <onentry>
        <raise event="in_b"/>
      </onentry>
      <transition event="f" target="/c"/>
    </state>
    <state id="c">
      <onentry>
        <raise event="in_c"/>
      </onentry>
    </state>
  </root>
</statechart>